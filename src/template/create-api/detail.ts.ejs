// api/<%= modelName %>.ts

import { API_URL } from '@mini/service'
import { request } from '@mini/shared'

/**
 * 查询<%= businessName %>详情
 * @param id <%= businessName %> ID
 * @returns <%= businessName %>详情
 */
export function get<%= public_sign %><%= model %>Detail(id: number) {
  return request.get<ResponseData<Api.<%= model %>>>({
    url: `${API_URL.<%= url_constant %>}${id}`,
  })
}

// hooks/<%= modelName %>.ts

import { API_URL } from '@mini/service'
import { useQuery } from '@tanstack/react-query'
import { get<%= public_sign %><%= model %>Detail } from '../api/<%= modelName %>'

/**
 * 查询<%= businessName %>详情的 Hook
 */
export function use<%= public_sign %><%= model %>Detail(id?: number) {
  return useQuery({
    queryKey: [API_URL.<%= url_constant %>, id],
    queryFn: async () => {
      const res = await get<%= public_sign %><%= model %>Detail(id!)
      return res.data
    },
    enabled: !!id, 
  })
}
