import { API_URL } from '@mini/service'
import { useQuery } from '@tanstack/react-query'
import { remove<%= public_sign %><%= model %> } from '../api/<%= modelName %>'

/**
 * 删除<%= businessName %>的 Hook
 */
export function use<%= public_sign %>Remove<%= model%>({
  onSuccess,
  onError,
}: {
  onSuccess?: () => void
  onError?: (error: Error) => void
} = {}) {
  return useMutation({
    mutationFn: async (id: number) => {
      return await remove<%= public_sign %><%= model %>(id)
    },
    onSuccess,
    onError,
  })
}
