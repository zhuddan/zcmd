/**
 * 删除<%= businessName %>
 * @param id <%= businessName %> ID
 */
export function remove<%= public_sign %><%= model %>(id: number) {
  return request.delete({
    url: `${API_URL.<%= url_constant %>}${id}`,
  })
}

