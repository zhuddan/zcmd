import { useMutation } from '@tanstack/react-query'
import { add<%= access %><%= model%> } from '../api/<%= modelName %>'

/**
 * 新增<%= businessName %>的 Hook
 */
export function use<%= access %>Add<%= model%>({
  onSuccess,
  onError,
}: {
  onSuccess?: () => void
  onError?: (error: Error) => void
} = {}) {
  return useMutation({
    mutationFn: async (data: Partial<Api.<%= model%>>) => {
      return await add<%= access %><%= model%>(data)
    },
    onSuccess,
    onError,
  })
}
